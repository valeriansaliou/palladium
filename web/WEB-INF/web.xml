<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Palladium BOSH Servlet</display-name>
	
	<description>XEP-0124: Bidirectional-streams Over Synchronous HTTP (BOSH)</description>
	
	<servlet>
		<servlet-name>Palladium</servlet-name>
		<servlet-class>org.xmpp.Palladium.PalladiumServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Palladium</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>
